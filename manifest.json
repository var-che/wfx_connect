{
  "manifest_version": 3,
  "name": "WFX Connect - FleetOne MC Checker",
  "version": "1.0.0",
  "description": "Streamline MC checking between DAT/Sylectus and FleetOne",

  "permissions": ["activeTab", "tabs", "storage", "scripting"],

  "host_permissions": [
    "https://one.dat.com/*",
    "https://www12.sylectus.com/*",
    "https://apps.fleetone.com/*",
    "*://*/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://one.dat.com/*"],
      "js": ["mc-checker.js", "content-dat.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://*.sylectus.com/**"],
      "js": ["mc-checker.js", "content-sylectus.js"],
      "css": ["styles.css"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["https://apps.fleetone.com/*"],
      "js": ["content-fleetone.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
